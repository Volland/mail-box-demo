{
  "verbose": true,
  "host": "0.0.0.0",
  "port": "8080",
  "watch": [
    "src", "db"
  ],
  "ignore": [
    ".git",
    "node_modules/"
  ],
  "env": {
    "APP_PORT": 8080,
    "METRICS_PORT": 8911,
    "CONFIG_ENV": "local",
    "LOG_LEVEL": "debug",
    "NODE_ENV": "development",
    "CREDENTIALS_DIR": "./credentials",
    "WORKERS": 1
  },
  "restartable": "rs",
  "exec": "npm start"
}